<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="Patient-Mother"/>
    <meta>
        <versionId value="16"/>
        <lastUpdated value="2020-07-11T06:00:46.484+00:00"/>
