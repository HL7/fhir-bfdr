                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/fhir-vr-common-ig/StructureDefinition/Patient-child"/>
            </type>
            <mustSupport value="true"/>
        </element>
        <element id="Encounter.participant">
            <path value="Encounter.participant"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="type"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
        </element>
