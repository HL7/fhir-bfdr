    <name value="EncounterBirth"/>
    <title value="Encounter - Birth"/>
    <status value="active"/>
    <publisher value="HL7 Public Health Work Group"/>
    <description value="This Encounter profile represents the child's birth encounter. This Encounter can reference the mother's maternity encounter using the partOf data element."/>
    <jurisdiction>
        <coding>
            <system value="urn:iso:std:iso:3166"/>
            <code value="US"/>
            <display value="United States of America"/>
        </coding>
    </jurisdiction>
