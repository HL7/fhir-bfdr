            <path value="Encounter.participant"/>
            <sliceName value="attendant"/>
        </element>
        <element id="Encounter.participant:attendant.type">
            <path value="Encounter.participant.type"/>
            <label value="LOINC fully specified name: Birth attendant"/>
            <definition value="LOINC fully specified name: Birth attendant"/>
            <min value="1"/>
            <patternCodeableConcept>
                <coding>
                    <system value="http://loinc.org"/>
                    <code value="87286-1"/>
                </coding>
            </patternCodeableConcept>
            <mustSupport value="true"/>
        </element>
        <element id="Encounter.participant:attendant.individual">
            <path value="Encounter.participant.individual"/>
            <min value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/fhir-vr-common-ig/StructureDefinition/Practitioner-live-birth-fetal-death"/>
            </type>
            <mustSupport value="true"/>
